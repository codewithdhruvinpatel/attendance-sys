<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | D's Office</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar-brand img {
      height: 40px;
      margin-right: 10px;
    }
    .dashboard-section {
      margin-top: 40px;
    }
    .section-header {
      border-left: 5px solid #0d6efd;
      padding-left: 10px;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="https://via.placeholder.com/40x40?text=D" alt="Logo">
        D’s Office Admin
      </a>
    </div>
  </nav>

  <div class="container mt-5">

    <!-- Add Employee -->
    <div class="dashboard-section">
      <h4 class="section-header">Add Employee</h4>
      <form action="/admin/add" method="POST" class="row g-3">
        <div class="col-md-3">
          <input name="name" class="form-control" placeholder="Full Name" required>
        </div>
        <div class="col-md-3">
          <input name="email" type="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="col-md-2">
          <input name="phone" class="form-control" placeholder="Phone" required>
        </div>
        <div class="col-md-2">
          <input name="password" type="password" class="form-control" placeholder="Password" required>
        </div>
        <div class="col-md-2">
          <button class="btn btn-success w-100">Add</button>
        </div>
      </form>
    </div>

    <!-- Top Attendance -->
    <div class="dashboard-section">
      <h4 class="section-header">Top Attendance</h4>
      <ul class="list-group">
        <% top.forEach(t => { %>
          <li class="list-group-item d-flex justify-content-between">
            <span><strong>ID:</strong> <%= t.employeeId %></span>
            <span><strong>Days Present:</strong> <%= t.dataValues.count %></span>
          </li>
        <% }) %>
      </ul>
    </div>
<!-- Attendance Details -->
<div class="dashboard-section">
  <h4 class="section-header">Punch In/Out Details</h4>
  <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Date</th>
          <th>Employee</th>
          <th>Punch In</th>
          <th>Punch Out</th>
          <th>In Photo</th>
          <th>Out Photo</th>
        </tr>
      </thead>
      <tbody>
        <% allAttendance.forEach(att => { %>
          <tr>
            <td><%= att.date %></td>
            <td><%= att.employee?.name || 'N/A' %></td>
            <td><%= att.punchIn || '-' %></td>
            <td><%= att.punchOut || '-' %></td>
            <td>
              <% if (att.punchInPhoto) { %>
                <a href="<%= att.punchInPhoto %>" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
              <% } else { %> — <% } %>
            </td>
            <td>
              <% if (att.punchOutPhoto) { %>
                <a href="<%= att.punchOutPhoto %>" target="_blank" class="btn btn-sm btn-outline-warning">View</a>
              <% } else { %> — <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

    <!-- Leave Requests -->
    <div class="dashboard-section">
      <h4 class="section-header">Leave Requests</h4>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-primary">
            <tr>
              <th>Employee</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% leaves.forEach(l => { %>
              <tr>
                <td><%= l.employee.name %></td>
                <td><%= l.startDate %></td>
                <td><%= l.endDate %></td>
                <td>
                  <span class="badge 
                    <%= l.status === 'approved' ? 'bg-success' : 
                        l.status === 'rejected' ? 'bg-danger' : 
                        'bg-warning text-dark' %>">
                    <%= l.status %>
                  </span>
                </td>
                <td>
                  <% if (l.status === 'pending') { %>
                    <form action="/admin/leave/<%= l.id %>/approved" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-success">Approve</button>
                    </form>
                    <form action="/admin/leave/<%= l.id %>/rejected" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-danger">Reject</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">—</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

</body>
</html>
