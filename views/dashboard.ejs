<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard | D‚Äôs Office</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f7fa;
    }
    .navbar-brand img {
      height: 40px;
      margin-right: 10px;
    }
    .dashboard-section {
      margin-top: 40px;
    }
    .section-header {
      border-left: 5px solid #0d6efd;
      padding-left: 10px;
      margin-bottom: 20px;
    }
    .card {
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="#">
        <img src="https://res.cloudinary.com/dkxmucbuk/image/upload/v1748755582/Wild_mwavqw.png" alt="Logo">
        D‚Äôs Office ‚Äì Employee Dashboard
      </a>
    </div>
  </nav>

  <div class="container mt-5">

    <!-- Welcome Section -->
    <div class="alert alert-info d-flex justify-content-between align-items-center">
      <h4 class="mb-0">Welcome, <%= user.name %></h4>
      <a href="/employee/punch" class="btn btn-outline-primary">üìç Punch In/Out</a>
    </div>

    <!-- Attendance Records -->
    <div class="dashboard-section">
      <h5 class="section-header">Your Attendance</h5>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-sm">
          <thead class="table-primary">
            <tr>
              <th>Date</th>
              <th>Punch In</th>
              <th>Punch Out</th>
            </tr>
          </thead>
          <tbody>
            <% atts.forEach(a => { %>
              <tr>
                <td><%= a.date %></td>
                <td><%= a.punchIn || '‚Äî' %></td>
                <td><%= a.punchOut || '‚Äî' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Leave Application -->
    <div class="dashboard-section">
      <h5 class="section-header">Apply for Leave</h5>
      <form action="/employee/leave" method="POST" class="row g-3 align-items-end">
        <div class="col-md-3">
          <label class="form-label">Start Date</label>
          <input type="date" name="start" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label class="form-label">End Date</label>
          <input type="date" name="end" class="form-control" required>
        </div>
        <div class="col-md-3">
          <label class="form-label">Type</label>
          <select name="type" class="form-select" required>
            <option disabled selected>Select</option>
            <option>Casual</option>
            <option>Sick</option>
            <option>Emergency</option>
          </select>
        </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-success w-100">Submit Leave Request</button>
        </div>
      </form>
    </div>
<h4 class="mt-5">Leave Status</h4>
<table class="table table-bordered table-sm">
  <thead class="table-light">
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Type</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% leaves.forEach(leave => { %>
      <tr>
        <td><%= leave.startDate %></td>
        <td><%= leave.endDate %></td>
        <td><%= leave.type %></td>
        <td>
          <% if (leave.status === 'approved') { %>
            <span class="badge bg-success">Approved</span>
          <% } else if (leave.status === 'rejected') { %>
            <span class="badge bg-danger">Rejected</span>
          <% } else { %>
            <span class="badge bg-warning text-dark">Pending</span>
          <% } %>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

  </div>

</body>
</html>
