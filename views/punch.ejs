<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Punch In/Out | Dâ€™s Office</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f2f4f8;
    }
    .container {
      max-width: 600px;
    }
    .punch-header {
      border-left: 5px solid #0d6efd;
      padding-left: 10px;
      margin-bottom: 25px;
    }
    video {
      border-radius: 10px;
      margin-bottom: 15px;
    }
    .btn-group .btn {
      width: 48%;
    }
    .footer {
      margin-top: 30px;
      font-size: 0.9em;
      color: gray;
    }
  </style>
</head>
<body>

  <div class="container py-5">
    <div class="text-center">
      <img src="https://via.placeholder.com/60x60?text=D" alt="Logo" class="mb-3">
      <h2 class="punch-header">Punch In / Out</h2>
    </div>

    <div class="text-center">
      <video autoplay playsinline width="100%" class="shadow-sm border border-2 border-primary"></video>
    </div>

    <div class="btn-group d-flex justify-content-between mt-3">
      <button onclick="take('in')" class="btn btn-success">âœ… Punch In</button>
      <button onclick="take('out')" class="btn btn-danger">ðŸš« Punch Out</button>
    </div>

    <p class="text-muted text-center footer">Your photo will be securely recorded and deleted after 30 days for privacy.</p>
  </div>

  <script>
    async function take(type) {
      const video = document.querySelector('video');
      const canvas = document.createElement('canvas');
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;
      canvas.getContext('2d').drawImage(video, 0, 0);
      const blob = await new Promise(resolve => canvas.toBlob(resolve, 'image/jpeg'));

      const formData = new FormData();
      formData.append('photo', blob);
      formData.append('type', type);

      await fetch('/employee/punch', {
        method: 'POST',
        body: formData
      });

      window.location = '/employee/dashboard';
    }

    window.onload = async () => {
      try {
        const stream = await navigator.mediaDevices.getUserMedia({ video: true });
        document.querySelector('video').srcObject = stream;
      } catch (error) {
        alert('Camera access denied or not available.');
      }
    };
  </script>

</body>
</html>
